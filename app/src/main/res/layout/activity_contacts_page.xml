<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ContactsPageActivity">

    <TextView
            android:text="Contacts:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtContactText" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="12sp"/>
    <Button
            android:text="Add Contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAddContactsPage" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.578" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="500dp" app:layout_constraintTop_toTopOf="parent" android:textSize="36sp"/>
    <Button
            android:text="Messages Page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMessagesPage" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.648" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="56dp" android:textSize="36sp"
            app:layout_constraintTop_toBottomOf="@+id/btnAddContactsPage"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="395dp"
            android:layout_height="460dp"
            android:id="@+id/contactRecyclerView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtContactText" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/btnAddContactsPage"/>
</android.support.constraint.ConstraintLayout>